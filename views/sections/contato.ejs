<div class="container">
  <div class="section-title">
    <h2>Siga-nos nas Redes Sociais</h2>
  </div>
  
  <div class="row">
    <div class="col">
      <div class="contato-sidebar">
        <div class="contato-redes-box">
          <div class="contato-redes">
            <a href="https://www.facebook.com/fesmp/" 
               target="_blank" 
               class="rede-social facebook"
               aria-label="Facebook">
              <i class="fab fa-facebook-f"></i>
              <span>Facebook</span>
            </a>
            <a href="https://www.instagram.com/escolasuperiormpmt/" 
               target="_blank" 
               class="rede-social instagram"
               aria-label="Instagram">
              <i class="fab fa-instagram"></i>
              <span>Instagram</span>
            </a>
            <a href="https://web.whatsapp.com/send?phone=5565996581800" 
               target="_blank" 
               class="rede-social whatsapp"
               aria-label="WhatsApp">
              <i class="fab fa-whatsapp"></i>
              <span>WhatsApp</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
/* === CONTATO SECTION === */
.contato-form-wrapper {
  background: var(--branco);
  padding: 2.5rem;
  border-radius: 12px;
  box-shadow: var(--sombra-leve);
}

.contato-form-title {
  font-size: 1.75rem;
  color: var(--preto);
  margin-bottom: 0.5rem;
}

.contato-form-subtitle {
  color: var(--cinza-medio);
  margin-bottom: 2rem;
}

.contato-form {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.form-row {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1.5rem;
}

.form-group {
  display: flex;
  flex-direction: column;
}

.form-group label {
  font-weight: 600;
  color: var(--cinza-escuro);
  margin-bottom: 0.5rem;
  font-size: 0.95rem;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.form-group label i {
  color: var(--vermelho-principal);
}

.form-control {
  padding: 0.875rem 1rem;
  border: 2px solid var(--cinza-claro);
  border-radius: 8px;
  font-size: 1rem;
  transition: all var(--transicao-rapida);
  font-family: var(--fonte-principal);
}

.form-control:focus {
  outline: none;
  border-color: var(--vermelho-principal);
  box-shadow: 0 0 0 3px rgba(193, 39, 45, 0.1);
}

.form-control::placeholder {
  color: var(--cinza-medio);
}

textarea.form-control {
  resize: vertical;
  min-height: 120px;
}

.form-check {
  display: flex;
  align-items: flex-start;
  gap: 0.75rem;
  margin-top: 0.5rem;
}

.form-check-input {
  margin-top: 0.25rem;
  width: 18px;
  height: 18px;
  cursor: pointer;
  accent-color: var(--vermelho-principal);
}

.form-check-label {
  font-size: 0.9rem;
  color: var(--cinza-medio);
  line-height: 1.5;
  cursor: pointer;
}

.form-check-label a {
  color: var(--vermelho-principal);
  font-weight: 600;
}

.form-message {
  padding: 1rem;
  border-radius: 8px;
  font-size: 0.95rem;
  text-align: center;
  display: none;
}

.form-message.success {
  background: rgba(45, 122, 62, 0.1);
  border: 2px solid var(--verde-institucional);
  color: var(--verde-institucional);
  display: block;
}

.form-message.error {
  background: rgba(193, 39, 45, 0.1);
  border: 2px solid var(--vermelho-principal);
  color: var(--vermelho-principal);
  display: block;
}

/* Sidebar */
.contato-sidebar {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.contato-info-box,
.contato-redes-box {
  background: var(--cinza-claro);
  padding: 2rem;
  border-radius: 12px;
}

.contato-info-box h3,
.contato-redes-box h3 {
  font-size: 1.5rem;
  color: var(--preto);
  margin-bottom: 1.5rem;
}

.contato-info-item {
  display: flex;
  gap: 1rem;
  padding: 1.5rem 0;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.contato-info-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.contato-info-icon {
  width: 50px;
  height: 50px;
  min-width: 50px;
  background: var(--gradiente-vermelho);
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--branco);
  font-size: 1.25rem;
}

.contato-info-content h4 {
  font-size: 1.1rem;
  color: var(--preto);
  margin-bottom: 0.5rem;
}

.contato-info-content p {
  color: var(--cinza-medio);
  font-size: 0.95rem;
  line-height: 1.6;
  margin: 0;
}

.contato-info-content a {
  color: var(--vermelho-principal);
  font-weight: 600;
}

.info-subtitle {
  font-size: 0.85rem;
  color: var(--cinza-medio);
}

/* Redes Sociais */
.contato-redes {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.rede-social {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1rem 1.5rem;
  background: var(--branco);
  border-radius: 8px;
  color: var(--cinza-escuro);
  font-weight: 600;
  transition: all var(--transicao-media);
}

.rede-social i {
  font-size: 1.5rem;
  width: 40px;
  text-align: center;
}

.rede-social:hover {
  transform: translateX(8px);
  box-shadow: var(--sombra-media);
}

.rede-social.facebook:hover {
  background: #1877F2;
  color: var(--branco);
}

.rede-social.instagram:hover {
  background: linear-gradient(45deg, #f09433 0%,#e6683c 25%,#dc2743 50%,#cc2366 75%,#bc1888 100%);
  color: var(--branco);
}

.rede-social.whatsapp:hover {
  background: #25D366;
  color: var(--branco);
}

/* Responsividade */
@media (max-width: 768px) {
  .contato-form-wrapper {
    padding: 1.5rem;
  }
  
  .form-row {
    grid-template-columns: 1fr;
    gap: 1rem;
  }
  
  .contato-sidebar {
    margin-top: 2rem;
  }
  
  .contato-info-box,
  .contato-redes-box {
    padding: 1.5rem;
  }
}
</style>

<script>
// Funcionalidade do formulário de contato
document.addEventListener('DOMContentLoaded', function() {
  const form = document.getElementById('contatoForm');
  const messageDiv = document.getElementById('formMessage');
  
  if (form) {
    form.addEventListener('submit', function(e) {
      e.preventDefault();
      
      // Simular envio
      const btn = form.querySelector('button[type="submit"]');
      const btnText = btn.innerHTML;
      
      btn.disabled = true;
      btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Enviando...';
      
      // Simular delay de envio
      setTimeout(() => {
        messageDiv.className = 'form-message success';
        messageDiv.textContent = 'Mensagem enviada com sucesso! Entraremos em contato em breve.';
        
        form.reset();
        btn.disabled = false;
        btn.innerHTML = btnText;
        
        // Esconder mensagem após 5 segundos
        setTimeout(() => {
          messageDiv.style.display = 'none';
        }, 5000);
      }, 1500);
    });
  }
  
  // Máscara de telefone simples
  const telefoneInput = document.getElementById('telefone');
  if (telefoneInput) {
    telefoneInput.addEventListener('input', function(e) {
      let value = e.target.value.replace(/\D/g, '');
      if (value.length <= 11) {
        value = value.replace(/^(\d{2})(\d)/g, '($1) $2');
        value = value.replace(/(\d)(\d{4})$/, '$1-$2');
        e.target.value = value;
      }
    });
  }
});
</script>