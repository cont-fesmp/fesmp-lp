<!-- views/sections/noticias.ejs -->
<div class="noticias-bg">
  <div class="container">
    <div class="section-title">
      <h2>Últimas Notícias</h2>
      <p>Fique por dentro das novidades da FESMP</p>
    </div>
    
    <% 
      // Array de embeds (use backticks para template literals)
      const instagramEmbeds = [
      ];
    %>
    
    <% if (instagramEmbeds && instagramEmbeds.length > 0) { %>
      <!-- Slider Swiper para Embeds do Instagram -->
      <div class="swiper-container noticias-swiper">
        <div class="swiper-wrapper">
          <% 
            // Agrupa 2 embeds por slide
            for (let i = 0; i < instagramEmbeds.length; i += 2) { 
          %>
            <div class="swiper-slide">
              <div class="noticia-slide-group">
                <div class="noticia-slide-embed">
                  <%= instagramEmbeds[i] %>
                </div>
                <% if (instagramEmbeds[i + 1]) { %>
                  <div class="noticia-slide-embed">
                    <%= instagramEmbeds[i + 1] %>
                  </div>
                <% } %>
              </div>
            </div>
          <% } %>
        </div>
        <!-- Navegação Swiper -->
        <div class="swiper-pagination"></div>
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
      </div>
    <% } else { %>
      <div class="noticias-empty">
        <i class="fab fa-instagram"></i>
        <p>Nenhum post do Instagram disponível no momento.</p>
      </div>
    <% } %>
    
    <div class="noticias-footer">
      <a href="https://www.instagram.com/escolasuperiormpmt/" target="_blank" class="btn btn-outline btn-lg">
        <i class="fab fa-instagram"></i>
        Ver no Instagram
      </a>
    </div>
  </div>
</div>

<!-- Inicialização do Swiper -->
<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Função para processar embeds
    const processEmbeds = () => {
      if (window.instgrm && window.instgrm.Embeds) {
        window.instgrm.Embeds.process();
      }
    };

    // Inicializa o Swiper
    const swiper = new Swiper('.noticias-swiper', {
      slidesPerView: 1,
      spaceBetween: 20,
      loop: true,
      autoHeight: true,
      observer: true,
      observeParents: true,
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      on: {
        init: function () {
          setTimeout(processEmbeds, 1000);  // Processa no inicial
        },
        slideChange: function () {
          setTimeout(processEmbeds, 500);  // Processa na mudança
        },
      },
      autoplay: {
        delay: 5000,
        disableOnInteraction: false,
      },
    });

    // MutationObserver para detectar slides visíveis
    const observer = new MutationObserver((mutations) => {
      mutations.forEach((mutation) => {
        if (mutation.type === 'attributes' && (mutation.attributeName === 'style' || mutation.attributeName === 'class')) {
          const target = mutation.target;
          if (target.classList.contains('swiper-slide-active') || target.style.display !== 'none') {
            setTimeout(processEmbeds, 200);  // Processa quando visível
          }
        }
      });
    });

    // Observa todos os slides
    document.querySelectorAll('.swiper-slide').forEach(slide => {
      observer.observe(slide, { attributes: true, attributeFilter: ['style', 'class'] });
    });

    // Processamento inicial e loop de backup
    setTimeout(processEmbeds, 1500);
    let processInterval = setInterval(processEmbeds, 3000);  // A cada 3s
    setTimeout(() => clearInterval(processInterval), 15000);  // Para após 15s
  });
</script>

<script async src="//www.instagram.com/embed.js"></script>

<style>
/* === NOTÍCIAS SECTION === */

/* Swiper Container */
.noticias-swiper {
  margin-bottom: 3rem;
  overflow: hidden;
}

/* Grupo de 2 embeds por slide */
.noticia-slide-group {
  display: flex;
  gap: 1rem;
  justify-content: space-between;
  align-items: flex-start;
}

.noticia-slide-embed {
  background: var(--branco);
  border-radius: 12px;
  padding: 1rem;
  box-shadow: var(--sombra-media);
  transition: all var(--transicao-media);
  flex: 1;
  min-height: 400px;  /* Altura mínima para consistência */
}

.noticia-slide-embed:hover {
  transform: translateY(-4px);
  box-shadow: var(--sombra-forte);
}

/* Ajustes para o embed do Instagram */
.noticia-slide-embed blockquote {
  margin: 0;
  width: 100% !important;
  max-width: none !important;
  border: none !important;
  box-shadow: none !important;
}

/* Swiper Navegação */
.swiper-pagination {
  bottom: 10px !important;
}

.swiper-button-next,
.swiper-button-prev {
  color: var(--vermelho-principal) !important;
}

/* Empty State */
.noticias-empty {
  text-align: center;
  padding: 4rem 2rem;
  color: var(--cinza-medio);
}

.noticias-empty i {
  font-size: 4rem;
  margin-bottom: 1rem;
  opacity: 0.5;
}

/* Footer */
.noticias-footer {
  text-align: center;
}

/* Responsividade */
@media (max-width: 768px) {
  .noticia-slide-group {
    flex-direction: column;  /* 1 coluna em mobile */
    gap: 0.5rem;
  }
  
  .noticia-slide-embed {
    min-height: 300px;
    padding: 0.5rem;
  }
  
  .noticias-footer .btn {
    width: 100%;
  }
}
</style>