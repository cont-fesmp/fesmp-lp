<!-- views/sections/noticias.ejs -->
<div class="noticias-bg">
  <div class="container">
    <div class="section-title">
      <h2>Últimas Notícias</h2>
      <p>Fique por dentro das novidades da FESMP</p>
    </div>
    
    <% if (noticias && noticias.length > 0) { %>
      <!-- Slider Swiper para Embeds do Instagram -->
      <div class="swiper-container noticias-swiper">
        <div class="swiper-wrapper">
          <% 
            // Agrupa 2 posts por slide
            for (let i = 0; i < noticias.length; i += 2) { 
          %>
            <div class="swiper-slide">
              <div class="noticia-slide-group">
                <div class="noticia-slide-embed">
                  <!-- Primeiro embed do grupo -->
                  <blockquote class="instagram-media" data-instgrm-permalink="<%= noticias[i].link %>" data-instgrm-version="14">
                    <div style="padding:16px;">
                      <a href="<%= noticias[i].link %>" style="color:#000; font-family:Arial,sans-serif; font-size:12px; font-style:normal; font-weight:normal; line-height:17px; text-decoration:none; word-wrap:break-word;" target="_blank">Ver post no Instagram</a>
                    </div>
                  </blockquote>
                </div>
                <% if (noticias[i + 1]) { %>
                  <div class="noticia-slide-embed">
                    <!-- Segundo embed do grupo -->
                    <blockquote class="instagram-media" data-instgrm-permalink="<%= noticias[i + 1].link %>" data-instgrm-version="14">
                      <div style="padding:16px;">
                        <a href="<%= noticias[i + 1].link %>" style="color:#000; font-family:Arial,sans-serif; font-size:12px; font-style:normal; font-weight:normal; line-height:17px; text-decoration:none; word-wrap:break-word;" target="_blank">Ver post no Instagram</a>
                      </div>
                    </blockquote>
                  </div>
                <% } %>
              </div>
            </div>
          <% } %>
        </div>
        <!-- Container para Navegação Swiper -->
        <div class="noticias-navigation">
          <div class="swiper-pagination noticias-pagination"></div>
        </div>
      </div>
    <% } else { %>
      <div class="noticias-empty">
        <i class="fab fa-instagram"></i>
        <p>Nenhum post do Instagram disponível no momento.</p>
      </div>
    <% } %>
    
    <div class="noticias-footer">
      <a href="https://www.instagram.com/escolasuperiormpmt/" target="_blank" class="btn btn-outline btn-lg">
        <i class="fab fa-instagram"></i>
        Ver no Instagram
      </a>
    </div>
  </div>
</div>

<!-- Inicialização do Swiper -->
<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Função para processar embeds
    const processEmbeds = () => {
      if (window.instgrm && window.instgrm.Embeds) {
        window.instgrm.Embeds.process();
      }
    };

    // Inicializa o Swiper
    const swiper = new Swiper('.noticias-swiper', {
      slidesPerView: 1,  // Mostra 1 grupo (2 posts) por vez
      spaceBetween: 20,
      loop: true,
      autoHeight: false,
      observer: true,
      observeParents: true,
      pagination: {
        el: '.noticias-pagination',
        clickable: true,
      },
      on: {
        init: function () {
          setTimeout(() => {
            processEmbeds();
            setTimeout(processEmbeds, 1500);
          }, 500);
        },
        slideChange: function () {
          setTimeout(processEmbeds, 500);
        },
      },
      autoplay: {
        delay: 5000,
        disableOnInteraction: false,
      },
    });

    // MutationObserver para slides ativos
    const observer = new MutationObserver(() => {
      setTimeout(processEmbeds, 300);
    });
    document.querySelectorAll('.swiper-slide').forEach(slide => {
      observer.observe(slide, { attributes: true, attributeFilter: ['class'] });
    });

    // Backup: Processa periodicamente
    let processInterval = setInterval(processEmbeds, 3000);
    setTimeout(() => clearInterval(processInterval), 20000);
  });
</script>

<script async src="//www.instagram.com/embed.js"></script>

<style>
/* === NOTÍCIAS SECTION === */

/* Swiper Container */
.noticias-swiper {
  margin-bottom: 3rem;
  overflow: hidden;
}

/* Grupo de 2 embeds por slide */
.noticia-slide-group {
  display: flex;
  gap: 1rem;  /* Espaço entre os 2 embeds */
  justify-content: space-between;
  align-items: stretch;  /* Altura igual */
  width: 100%;
  height: 720px;  /* Altura fixa do grupo */
}

.noticia-slide-embed {
  background: var(--branco);
  border-radius: 12px;
  padding: 1rem;
  box-shadow: var(--sombra-media);
  transition: all var(--transicao-media);
  /* Largura 50% para 2 lado a lado, altura fixa */
  flex: 1;  /* Ocupa espaço igual */
  display: flex;
  align-items: center;
  justify-content: center;
}

.noticia-slide-embed:hover {
  transform: translateY(-4px);
  box-shadow: var(--sombra-forte);
}

/* Ajustes para o embed do Instagram */
.noticia-slide-embed blockquote {
  margin: 0;
  width: 100% !important;
  height: 100% !important;
  max-width: none !important;
  border: none !important;
  box-shadow: none !important;
  display: flex;
  align-items: center;
  justify-content: center;
  transform: scale(0.8);
  transform-origin: center;
}

/* Para o iframe interno do Instagram */
.noticia-slide-embed blockquote iframe {
  width: 100% !important;
  height: 100% !important;
  border: none !important;
}

/* Container da Navegação Swiper */
.noticias-navigation {
  position: relative;
  margin-top: 1rem;  /* Espaço logo abaixo dos slides */
  display: flex;
  justify-content: center;  /* Centraliza horizontalmente */
  align-items: center;  /* Alinha verticalmente */
  gap: 1rem;  /* Espaço entre pagination e buttons */
}

/* Swiper Navegação */
.noticias-pagination {
  position: static !important;  /* Remove posicionamento absoluto para usar no flex */
  margin: 0 !important;
}

/* Empty State */
.noticias-empty {
  text-align: center;
  padding: 4rem 2rem;
  color: var(--cinza-medio);
}

.noticias-empty i {
  font-size: 4rem;
  margin-bottom: 1rem;
  opacity: 0.5;
}

/* Footer */
.noticias-footer {
  text-align: center;
}

/* Responsividade */
@media (max-width: 768px) {
  .noticia-slide-group {
    flex-direction: column;  /* Um embaixo do outro em mobile */
    gap: 0.5rem;
    height: auto;  /* Altura automática para 2 stacked */
  }
  
  .noticia-slide-embed {
    flex: none;  /* Remove flex para altura individual */
    width: 100%;  /* Largura total */
    height: 480px;  /* Altura fixa por embed */
    padding: 0.5rem;
  }
  
  .noticia-slide-embed blockquote {
    transform: scale(0.5);  /* Reduz mais para caber */
  }
  
  .noticias-footer .btn {
    width: 100%;
  }
}
</style>