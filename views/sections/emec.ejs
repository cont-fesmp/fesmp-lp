        <div class="emec-visual">
          <div class="emec-card">
            <div class="emec-card-header">
              <img src="/images/logo/logo-mec.png" 
                   alt="Logo MEC" 
                   class="emec-logo"
                   onerror="this.style.display='none'">
            </div>
            
              <div class="emec-qrcode">
                <div class="qrcode-placeholder">
                  <img src="/images/qrcode-emec.png" 
                      alt="QR Code E-MEC"
                      style="width: 100%; height: 100%; object-fit: contain;"
