<style>
/* ===== HERO BASE ===== */
.hero {
  min-height: 100vh;
  display: grid;
  grid-template-columns: 1fr 1fr;
  background: linear-gradient(135deg, #1A1A1A 0%, #2a2a2a 100%);
  color: white;
}

/* ===== LEFT (CONTENT) ===== */
.hero-left {
  display: flex;
  align-items: center;
  padding: 4rem;
}

.hero-title {
  font-size: 3.5rem;
  font-weight: 700;
  margin-bottom: 1.5rem;
}

.highlight {
  color: #C1272D;
}

.hero-badge {
  display: inline-block;
  padding: 0.75rem 1.5rem;
  background: rgba(193, 39, 45, 0.2);
  border: 2px solid #C1272D;
  border-radius: 50px;
  margin-bottom: 2rem;
}

.hero-text {
  font-size: 1.25rem;
  max-width: 700px;
  margin-bottom: 3rem;
  opacity: 0.9;
}

.hero-actions {
  display: flex;
  gap: 1.5rem;
}

/* ===== RIGHT (CAROUSEL) ===== */
.hero-right {
  position: relative;
  overflow: hidden;
}

.carousel,
.slide {
  width: 100%;
  height: 100%;
}

.slide {
  position: absolute;
  inset: 0;
  background-size: cover;
  background-position: right center; /* Alterado para alinhar à direita */
  opacity: 0;
  transform: scale(1.05);
  transition: opacity 1s ease-in-out, transform 6s ease;
}

.slide.active {
  opacity: 1;
  transform: scale(1);
}

.overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(
    270deg,
    rgba(0,0,0,0.65),
    rgba(0,0,0,0.15)
  );
}

/* ===== RESPONSIVO ===== */
@media (max-width: 768px) {
  .hero {
    grid-template-columns: 1fr;
  }

  .hero-right {
    height: 40vh;
  }

  .hero-left {
    padding: 2rem;
    text-align: center;
  }

  .hero-actions {
    justify-content: center;
  }

  .hero-title {
    font-size: 2.4rem;
  }
}
</style>

<script>
  (function () {
    const slides = document.querySelectorAll('.slide');
    let index = 0;

    setInterval(() => {
      slides[index].classList.remove('active');
      index = (index + 1) % slides.length;
      slides[index].classList.add('active');
    }, 5000);
  })();
</script>