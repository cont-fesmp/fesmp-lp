<style>
/* === E-MEC SECTION === */
.emec-section {
  background: var(--verde-claro-suporte);
  position: relative;
  overflow: hidden;
}

.emec-section::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -10%;
  width: 600px;
  height: 600px;
  background: radial-gradient(circle, rgba(193, 39, 45, 0.05) 0%, transparent 70%);
  pointer-events: none;
}

.row.align-center {
  align-items: center;
}

.emec-badge {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.5rem 1rem;
  background: var(--verde-institucional);
  color: var(--branco);
  border-radius: 20px;
  font-size: 0.9rem;
  font-weight: 600;
  margin-bottom: 1.5rem;
}

.emec-title {
  font-size: 1.5rem;
  color: var(--preto);
  margin-bottom: 1.5rem;
  line-height: 1.5;
}

.emec-title .highlight {
  color: var(--vermelho-principal);
}

.emec-text {
  font-size: 1.2rem;
  line-height: 1.8;
  color: var(--cinza-escuro);
  margin-bottom: 2rem;
}

/* Features */
.emec-features {
  margin-bottom: 2rem;
}

.emec-feature {
  display: flex;
  align-items: flex-start;
  gap: 1rem;
  padding: 1rem 0;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.emec-feature:last-child {
  border-bottom: none;
}

.emec-feature i {
  font-size: 1.5rem;
  color: var(--vermelho-principal);
  min-width: 30px;
}

.emec-feature h4 {
  font-size: 1.1rem;
  color: var(--preto);
  margin-bottom: 0.25rem;
}

.emec-feature p {
  font-size: 0.95rem;
  color: var(--cinza-medio);
  margin: 0;
}

.emec-actions {
  display: flex;
  gap: 1rem;
  flex-wrap: wrap;
}

/* Visual Card */
.emec-visual {
  display: flex;
  justify-content: center;
  align-items: center;
}

.emec-card {
  background: var(--branco);
  border-radius: 12px;
  padding: 2rem;
  box-shadow: var(--sombra-media);
  max-width: 400px;
  width: 100%;
}

.emec-card-header {
  text-align: center;
  padding-bottom: 1.0rem;
}

.emec-logo {
  height: 60px;
  margin-bottom: 1rem;
}

.emec-card-header h3 {
  font-size: 1.25rem;
  color: var(--preto);
  margin: 0;
}

.emec-card-body {
  margin-bottom: 2rem;
}

.emec-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0.75rem 0;
  border-bottom: 1px solid var(--cinza-claro);
}

.emec-info:last-child {
  border-bottom: none;
}

.emec-label {
  font-weight: 600;
  color: var(--cinza-medio);
  font-size: 0.95rem;
}

.emec-value {
  font-weight: 600;
  color: var(--preto);
  font-size: 0.95rem;
  text-align: right;
}

.emec-value.status-active {
  color: var(--verde-institucional);
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

/* QR Code responsivo e centralizado */
.emec-qrcode {
  text-align: center;  /* Centraliza o texto e o placeholder */
  padding-top: 0.5rem;
  border-top: 2px solid var(--cinza-claro);
}

.qrcode-placeholder {
  width: 100%;          /* Ocupa 100% da largura do card */
  max-width: 300px;     /* Limita largura máxima */
  height: 0;            /* Altura inicial 0 para aspect-ratio */
  padding-bottom: 100%; /* Aspect-ratio 1:1 (quadrado) */
  margin: 0 auto 1rem;  /* Centraliza horizontalmente */
  background: var(--cinza-claro);
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8px;
  position: relative;    /* Para posicionar a img e i */
}

.qrcode-placeholder img,
.qrcode-placeholder i {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);  /* Centraliza perfeitamente */
  width: 90%;       /* 90% do placeholder para margem interna */
  height: 90%;
  object-fit: contain;
}

.qrcode-placeholder i {
  font-size: 4rem;
  color: var(--cinza-medio);
}

/* Responsividade */
@media (max-width: 768px) {
  .qrcode-placeholder {
    max-width: 250px;  /* Menor em tablets */
    padding-bottom: 100%;  /* Mantém quadrado */
  }
  
  .qrcode-placeholder img,
  .qrcode-placeholder i {
    width: 85%;  /* Um pouco menor */
    height: 85%;
  }
}

@media (max-width: 480px) {
  .qrcode-placeholder {
    max-width: 200px;  /* Ainda menor em mobile */
  }
  
  .qrcode-placeholder img,
  .qrcode-placeholder i {
    width: 80%;
    height: 80%;
  }
}

/* Responsividade */
@media (max-width: 768px) {
  .emec-title {
    font-size: 1.75rem;
  }
  
  .emec-text {
    font-size: 1rem;
  }
  
  .emec-actions {
    flex-direction: column;
  }
  
  .emec-actions .btn {
    width: 100%;
  }
  
  .emec-card {
    margin-top: 2rem;
  }
}
</style>