  <meta property="og:image:height" content="300">
  <meta property="og:image:width" content="615">
  <meta property="og:image" content="https://fesmp-lp.vercel.app/images/logo/logo-meta.jpg">
  <meta property="og:url" content="https://fesmp-lp.vercel.app">
  <meta property="og:site_name" content="FESMP/MT">
  <meta property="og:type" content="website">
  <link rel="icon" type="image/png" href="/favicon.png">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap">
  <link rel="stylesheet" href="https://unpkg.com/swiper@8/swiper-bundle.min.css">
  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="/css/animations.css">
</head>
<body>
  <%- include('partials/header') %>
  
  <main>
    <section id="hero" class="section">
      <%- include('sections/hero') %>
    </section>

    <section id="matricula" class="section bg-light no-animate">
      <%- include('sections/matricula') %>
    </section>
 
    <section id="cursos" class="section bg-light no-animate">
      <%- include('sections/cursos') %>
    </section>

    <section id="noticias" class="section bg-light no-animate">
      <%- include('sections/noticias') %>
    </section>

    <section id="diferenciais" class="section">
      <%- include('sections/diferenciais') %>
    </section>

    <section id="depoimentos" class="section bg-light">
      <%- include('sections/depoimentos') %>
    </section>
    
    <section id="parceiros" class="section">
      <%- include('sections/parceiros') %>
    </section>

    <section id="emec" class="section bg-light">
      <%- include('sections/emec') %>
    </section>
    
    <section id="localizacao" class="section">
      <%- include('sections/localizacao') %>
    </section>
    
    <section id="contato" class="section bg-light">
      <%- include('sections/contato') %>
    </section>
  </main>
  
  <%- include('partials/footer') %>

    <div id="popup">
        <button id="close-popup"><i class="fas fa-times"></i></button>
        <img id="popup-image" src="/images/cartilha.png" alt="Cartilha">
    </div>

    <div id="whatsapp-button">
      <a href="https://wa.me/556596581800?text=Acessei%20o%20site%20https://www.fundcacaoescola.org.br%20e%20gostaria%20de%20mais%20informa%C3%A7%C3%B5es!" target="_blank">
        <img src="https://upload.wikimedia.org/wikipedia/commons/6/6b/WhatsApp.svg" alt="WhatsApp" width="70" height="70">
      </a>
    </div>
  
  <script src="/js/navigation.js"></script>
  <script src="/js/animations.js"></script>
  <script>
    window.onload = () => {
      const button = document.getElementById('whatsapp-button');
      button.style.opacity = '0';
      setTimeout(() => {
        button.style.transition = 'opacity 0.5s';
        button.style.opacity = '1';
      }, 500); // Aparece após 1 segundo
    };
  </script>

<script src="https://unpkg.com/swiper@8/swiper-bundle.min.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const swiper = new Swiper('.cursos-carousel', {
      spaceBetween: 20,
      autoplay: {
        delay: 4000,
        disableOnInteraction: false,  
      },
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      loop: false,       
      freemode: false,
      watchOverflow: true,
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },
      breakpoints: {
        768: {
          slidesPerView: 1,
        },
        1024: {
          slidesPerView: 2,
        },
        1200: {
          slidesPerView: 3,
        }
      }
    });
  });
</script>
<script>
// Evento para fechar o pop-up
document.getElementById('close-popup').addEventListener('click', function() {
    document.getElementById('popup').style.display = 'none';
});

// Evento para download ao clicar na imagem
document.getElementById('popup-image').addEventListener('click', function() {
    // Cria um link temporário para o download
    const link = document.createElement('a');
    link.href = '/download/pdf';  // Rota do servidor (veja abaixo como criar)
    link.download = 'CARTILHA FUND PRIV.pdf';  // Nome do arquivo no download
    link.target = '_blank';  // Abre em nova aba se necessário (opcional)
    link.click();
});
</script>
  </body>
</html>